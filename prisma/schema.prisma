generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  clerkId  String
  email    String     @unique
  name     String
  receipts Receipts[]
}

model Receipts {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  category    String?
  location    String?
  description String?
  total       String?
  imgUrl      String
  paymentType String?
  date        String?
  User        User?   @relation(fields: [userId], references: [id])
  userId      String? @db.ObjectId
}

model BudgetBuddy {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}
